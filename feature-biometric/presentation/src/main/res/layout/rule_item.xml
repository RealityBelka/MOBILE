<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Лицо смотрит в камеру"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:letterSpacing="0.03125"
        android:text="Фото соответствует возрасту. Лицо открыто,\nвзгляд направлен в объектив камеры.\nВыражение - нейтральное"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <Space
        android:id="@+id/center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imageCorrect"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/img_corners"
        android:clipToOutline="true"
        android:layout_marginEnd="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/desc"
        app:layout_constraintEnd_toStartOf="@id/center_horizontal"
        app:srcCompat="@drawable/closed_face" />


    <ImageView
        android:id="@+id/imageIncorrect"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/img_corners"
        android:clipToOutline="true"
        android:layout_marginStart="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@id/center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/desc"
        app:srcCompat="@drawable/view_front" />

</androidx.constraintlayout.widget.ConstraintLayout>
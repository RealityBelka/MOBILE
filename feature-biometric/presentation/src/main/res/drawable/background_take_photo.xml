<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/circular_button.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Circle (border) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#00000000" /> <!-- Transparent inner -->
            <stroke android:width="4dp" android:color="#FFFFFF" /> <!-- White outer border -->
        </shape>
    </item>

    <!-- Inner Circle (main button) -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- White background for inner circle -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- Black inner border -->
        </shape>
    </item>
</layer-list>
